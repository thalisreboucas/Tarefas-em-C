#include <stdio.h>

int main(void)
{ int n ;
        printf("Digite um numero para a contador :\n");
	scanf("%d",&n);
  int contador;  
  for(contador = n; contador >= 1 ; contador--)
  {
    printf("%d ", contador);
  }
  
  return(0);
}

