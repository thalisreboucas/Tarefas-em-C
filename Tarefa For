Questão 2 
a)
#include <stdio.h>

int main(void)
{ int n ;
  int i ;
int somat = 0;
          
  printf("Digite um numero para a contador :\n");
	scanf ("%d",&n);
  int contador;  
  for(contador = 1; contador <= n ; contador++)
  {
    printf("%d \n", contador);
  }
	  
for (i =1;i<=n;i++)
 somat = somat + i ;
 printf("soma :%d\n",somat);
 printf("media : %d\n",(somat/n));
 printf("numero de elementos : %d\n ", n );
  return(0);
}
