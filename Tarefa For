int main(void)
{ int n ;
  int i ;
int somat = 0;
          
  printf("Digite um numero para a contador :\n");
	scanf ("%d",&n);
  int contador;  
  for(contador = 1,i = n ; contador <= n && (i >= 1);i--,contador++)
  {
    printf("%d , %d, ", contador , i );
  }

for (i =1;i<=n;i++)
 somat = somat + i ;
 printf("soma :%d\n",2*somat);
 printf("media : %d\n",2*somat/n);
 printf("numero de elementos : %d\n ", 2*n );
  return(0);
