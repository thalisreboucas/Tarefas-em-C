4.#include <stdio.h>

int main(void)
{ int n ;
        
        printf("Digite um numero para a contador :\n");
	scanf ("%d",&n);
  int contador;  
  for(contador = 1 ;contador <= n ; contador++)
  { continue ;
	 printf("%d ", contador);
  }
  
  return(0);
}

#include <stdio.h>

int main(void)
{ int n ;
        
        printf("Digite um numero para a contador :\n");
	scanf ("%d",&n);
  int contador;  
  for(contador = 1 ;contador <= n ; contador++)
  { break ;
	 printf("%d ", contador);
