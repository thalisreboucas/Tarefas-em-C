#include <stdio.h>

int main(void)
{ int n ;
  int i ;
  int contador;
	printf("Digite um numero para a contador :");
	scanf("%d",&n);
    
  for(contador = 1,i = n ; contador <= n && (i >= 1);i--,contador++)
  {
    printf("%d , %d, ", contador , i );
  }
   return(0);
}

