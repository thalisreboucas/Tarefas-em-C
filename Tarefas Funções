#include <stdio.h>
#include <math.h>

int ehprimo(int x)
  {
    for (int i=2; i<=sqrt(x); i++)  
      {
        if(x%i==0){return 0;}
      
      }
      
      return 1;
  }

int main(void) {
  int valor,a;
  printf("Digite um valor: \n");
  scanf("%d",&valor);
  a = ehprimo(valor) ;
	printf("%d",a);


  
 
  return 0;
}

