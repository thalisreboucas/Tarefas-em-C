#include <stdio.h>
#include <math.h>

  
int maior(int valor1,int valor2){
   if(valor1 > valor2 ){ 
   return valor1 ;
	}else {
			return  valor2 ;
  }

}
int main(void) {
  int valor1,valor2,b;
 
  printf("digite um numero:");
	scanf("%d",&valor1);

	printf("digite um numero:");
	scanf("%d",&valor2);
  
	b = maior(valor1,valor2); 
	printf("O maior é : %d",b);
	
  return 0;
}

