#include <stdio.h>
#include <math.h>

int ehprimo(float x)
  {
    for (float i=2; i<=sqrt(x); i++)  
      {
        if(x%i==0){return 0;}
      
      }
      
      return 1;
  }

int main(void) {
  float valor,a;
  printf("Digite um valor: \n");
  scanf("%f",&valor);
  a = ehprimo(valor) ;
	printf("%f",a);
  
 
  return 0;
}

