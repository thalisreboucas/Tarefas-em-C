//c)
#include <stdio.h>
#include <stdlib.h>
    

    int main() {
        int x, y,s;
      
         printf("Digite um numero : ");
         scanf("%d", &x);
         
				 printf("Digite um numero : ");
         scanf("%d", &y);

				 printf("Digite um numero : ");
         scanf("%d", &s);


				 float a = (x+y+s)/3 ;

    printf("\nO valor  do numero eh : %f\n\n", a);
        system("Pause");
        return 0;      
    }
