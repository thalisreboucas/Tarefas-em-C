//f)
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
    

    int main() {
        int x;
      
         printf("Digite o valor da temperatura em fahrenheit : ");
         scanf("%d", &x);

				 float R = (x-32)/1.8 ;

    printf("\nO temperatura em celsius : %f\n\n", R);
        system("Pause");
        return 0;      
    }

Experimento
#include <stdio.h>
int main(void) {
 float a = 100000;
 float b = 200000;
 float m = (a/b);
   printf("resultado da divisão real %f/%f = %f\n ",a,b,m);
	 printf("resultado da divisão inteiro  %d \n",m);

 int x = 10000;
 int y = 20000;
 int d = (a/b);
  printf("resultado da divisão inteiro %d/%d = %d\n ",x,y,d);
 printf("resultado da divisão inteiro  %f \n",d);

 int e = 15000;
 float r = 2000;
 printf("resultado da divisão inteiro %d\n",e/r);
 printf("resultado da divisão inteiro  %f\n ",e/r);

 float u = 1;
 int i = 2;
 printf("resultado da divisão inteiro %d\n ",u/i);
 printf("resultado da divisão inteiro  %f\n ",u/i);
}


// No comando "int" o computador entende que é um número inteiro e que não tem casas decimais , já no float haverá casa decimais ,mas o importante é definir no printf qual saída vou querer , mas vai gerar um erro e o resultado vai ser 0.

