#include <stdio.h>
    
    int main(void)
    {
        int cont, n, i;
			printf("digite um numero :");
       scanf("%d", &n);
        cont = 1;
       for (i = 1; i <= n; i = i+1) cont *= i;
        printf("%d\n", cont);
       return 0;
   }
